#!/usr/bin/env python

import argparse
import unnoticed
from os.path import abspath, isfile, join

if __name__ == "__main__":
    unnoticed.util.log.info("Starting")
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "--db",
        metavar="<FILE>",
        default=join(unnoticed.DBROOT, "scores.db"),
        help="non-default path to scores.db",
    )
    args = parser.parse_args()
    if not isfile(args.db):
        print("Exiting: No file exists at '%s'" % abspath(args.db))
        exit(1)

    try:
        unnoticed.monitorloop(args.db)
    except Exception as e:
        unnoticed.notify("Error: %s\nPlease report this!" % e)
    unnoticed.util.log.info("Exiting")
