#!/usr/bin/env python

import argparse
import logging
import unnoticed
from os.path import abspath, isfile, join

if __name__ == "__main__":
    unnoticed.util.log.info("Starting")

    parser = argparse.ArgumentParser(
        description="[Unnoticed]: Unranked leaderboards for osu!",
    )
    parser.add_argument(
        "--file",
        metavar="<FILE>",
        default=join(unnoticed.DBROOT, "scores.db"),
        help="non-default path to scores.db",
    )
    parser.add_argument(
        "--debug",
        action="store_true",
        help="enable extended logging",
    )

    args = parser.parse_args()
    if not isfile(args.file):
        print("Exiting: No file exists at '%s'" % abspath(args.file))
        exit(1)
    elif args.debug:
        logging.getLogger().setLevel(logging.DEBUG)

    try:
        unnoticed.monitorloop(args.file)
    except Exception as e:
        unnoticed.notify("Error: %s\nPlease report this!" % e)
    unnoticed.util.log.info("Exiting")
